<div class="card h-100">
    <div class="card-header">
        {{#str}}timeline_title, local_slow_queries{{/str}}
    </div>
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <ul>
                <li>{{#str}}timeline_last_7, local_slow_queries, {{{totalcount}}}{{/str}}</li>
                <li>{{#str}}timeline_totaltime, local_slow_queries, {{{totaltime}}}{{/str}}</li>
                <li>{{#str}}timeline_scale, local_slow_queries, {{{secpx}}}{{/str}}</li>
            </ul>
        </div>

        <table style="width: 100%;">
            <tr class="card-header">
                <th class="fw-semibold text-nowrap pr-3">
                    {{#str}}timeline_calendar, local_slow_queries{{/str}}
                </th>
                <th>
                    <div class="lsq-axis small text-muted">
                        <span>00:00</span>
                        <span>06:00</span>
                        <span>12:00</span>
                        <span>18:00</span>
                        <span>24:00</span>
                    </div>
                </th>
            </tr>
            {{#days}}
                <tr>
                    <td class="lsq-day-label text-nowrap pr-3">{{{daylabel}}}</td>
                    <td>
                        <div class="lsq-timeline-grid flex-grow-1" aria-label="{{{daylabel}}}">
                            {{#segments}}
                                <span class="lsq-timeline-seg"
                                      style="left:{{{left}}}%;width:{{{width}}}px;"
                                      title="{{title}}"></span>
                            {{/segments}}
                        </div>
                    </td>
                </tr>
            {{/days}}
        </table>
    </div>
</div>