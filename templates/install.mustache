{{!
    @template local_slow_queries/index

    Example context (json):
    {
        "showlogslowwarning": false,
        "logslowvalue": "...",
        "logslowconfigsnippet": "please configure..."
    }
}}

{{^showlogslowwarning}}
    <div class="card mb-3">
        <div class="card-header">
            <div class="fw-semibold">{{#str}}logslow_warning_title, local_slow_queries{{/str}}</div>
        </div>
        <div class="card-body">
            <div class="alert alert-warning mb-3">
                <div class="mb-2">{{#str}}logslow_warning_body, local_slow_queries{{/str}}</div>
                {{#logslowvalue}}
                    <div class="small text-muted mb-2">
                        {{#str}}logslow_warning_current, local_slow_queries{{/str}}: <span
                            class="fw-semibold">{{logslowvalue}}</span>
                    </div>
                {{/logslowvalue}}
                <pre class="lsq-pre mb-0">{{logslowconfigsnippet}}</pre>
            </div>
            <div class="small text-muted">{{#str}}logslow_warning_hint, local_slow_queries{{/str}}</div>
        </div>
    </div>
{{/showlogslowwarning}}