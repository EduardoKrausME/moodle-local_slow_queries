{{!
    @template local_slow_queries/index

    Example context (json):
    {
        "search": "SELECT",
        "minexec": "0.200",
        "tablehtml": "<table class='generaltable'>...</table>"
    }
}}

{{#showlogslowwarning}}
    <div class="card mb-3">
        <div class="card-header">
            <div class="fw-semibold">{{#str}}logslow_warning_title, local_slow_queries{{/str}}</div>
        </div>
        <div class="card-body">
            <div class="alert alert-warning mb-3">
                <div class="mb-2">{{#str}}logslow_warning_body, local_slow_queries{{/str}}</div>
                {{#logslowvalue}}
                    <div class="small text-muted mb-2">
                        {{#str}}logslow_warning_current, local_slow_queries{{/str}}: <span
                            class="fw-semibold">{{logslowvalue}}</span>
                    </div>
                {{/logslowvalue}}
                <pre class="lsq-pre mb-0">{{logslowconfigsnippet}}</pre>
            </div>
            <div class="small text-muted">{{#str}}logslow_warning_hint, local_slow_queries{{/str}}</div>
        </div>
    </div>
{{/showlogslowwarning}}

<div class="card mb-3">
    <div class="card-header">
        <div class="fw-semibold">{{#str}}filter_title, local_slow_queries{{/str}}</div>
    </div>
    <div class="card-body">
        <form method="get" class="row gap-2 align-items-end">
            <div class="col-12 col-lg-5">
                <label class="form-label mb-1">{{#str}}filter_search, local_slow_queries{{/str}}</label>
                <input type="text" class="form-control" name="search"
                       value="{{search}}"
                       placeholder="{{#str}}filter_search_ph, local_slow_queries{{/str}}">
            </div>

            <div class="col-6 col-lg-2">
                <label class="form-label mb-1">{{#str}}filter_minexec, local_slow_queries{{/str}}</label>
                <input type="number" step="0.001" min="0" class="form-control" name="minexec" value="{{minexec}}">
            </div>

            <div class="col-12 col-lg-1 d-flex gap-2">
                <button class="btn btn-primary w-100" type="submit">
                    {{#str}}filter_apply, local_slow_queries{{/str}}</button>
            </div>
        </form>
    </div>
</div>
